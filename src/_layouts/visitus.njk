---
layout: 'blog.njk'
---

<div class="visit">
    {%- for element in collections.visit|sort(attribute="data.order") -%}
        <div class="visit-con">
            {% set headline = element.data.headline %}
            {% set type = element.data.type %}
            {% set text_markdown = ".." + element.data.page.filePathStem + ".md" %}
            {% if headline|length %}
                <h1>{{ headline }}</h1>
            {% endif %}
            {% if type == "text" %}
                {% markdown %}
                {%- include text_markdown -%}
                {% endmarkdown %}
            {% elif type == "maps" %}
                Maps
            {% endif %}
        </div>
    {%- endfor -%}
</div>
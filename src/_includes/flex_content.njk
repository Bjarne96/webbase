{# VARIABLES #}
{% set id = row.data.id %}
{% set h2 = row.data.h2 %}
{% set text_markdown = "../" + row.data.page.filePathStem + ".md" %}
{% set textExtra = row.data.textExtra %}
{% set markdownsrc = row.data.page.inputPath %}
{% set btnTarget = row.data.btnTarget %}
{% set btnText = row.data.btnText %}
{% set btnUrl = row.data.btnUrl %}
{% set btnModal = row.data.btnModal %}
{% set image = row.data.image %}
{% set bgcl = row.data.bgcl %}
{% set imageFormat = row.data.imageFormat %}
{% set greenproject = row.data.greenproject %}
{# CLASSES #}
{% set bgclClass = "row-reverse" %}
{% set imgContainerClass = "img-con" %}
{# GREENPROJECT #}
{% if greenproject %}
    {% set imgContainerClass = imgContainerClass + " img-gp-con" %}
{% endif %}
{# BACKGROUND COLOR #}
{% if bgcl|length %}
    {% if bgcl == "sec" %}
        {% set bgclClass = "bg-cl-sec" %}
    {% elif bgcl == "pri" %}
        {% set bgclClass = "bg-cl-pri" %}
    {% endif %}
{% endif %}
{% if imageFormat|length %}
    {% set imageStyle = "height: calc(calc(1vw / "+ imageFormat +") * 100);max-height: calc(600px  / "+ imageFormat +");" %}
{% endif %}
{# FLEX CONTENT CONTAINER #}
<div id="{{ id }}" class="flex-content {{ bgclClass }}">
    <div style="{{ imageStyle }}" class="{{ imgContainerClass }}">
        <img alt="{{ h2 }}" src="{{ image }}"/>
    </div>
    <div class="text-con">
        {% include 'flex_text.njk' %}
    </div>
</div>
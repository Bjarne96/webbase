{% set texts = hero.texts %}
{% set next_section = hero.next_section %}
<div class="wt">
    <h1 class="wt-content">
        {% for text in texts %}
            {# <div class="wt-item animate-rotateX" style="animation-delay: {{ loop.index + (0.2 * loop.index) }}s;"> #}
            <div class="wt-item">
                {{ text }}
            </div>
        {% endfor %}
    </h1>
    {% if next_section|length %}
        <div
            class="btn-container">
            {# <div style="animation-delay: {{ texts.length + 1.2 }}s;" class="animate-fade navigate btn-icon btn-icon-secondary" data-target-id="{{ next_section }}"> #}
            <div class="navigate btn-icon btn-icon-secondary" data-target-id="{{ next_section }}">
                {% set svg = collections.config[0].data.arrow_down %}
                {% include 'svg.njk' %}
            </div>
        </div>
    {% endif %}
</div>
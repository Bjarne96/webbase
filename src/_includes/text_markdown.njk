{# 

Expects the path to a markdownfile and 
extracts its content into a paragraph.
<p> </p>

#}
{% set markdown_path = ".." + text_markdown.page.filePathStem + ".md" %}
{% if markdown_path|length %}
    {% markdown %}
    {%- include markdown_path -%}
    {% endmarkdown %}
{% else %}
    {{ markdown_path }}
    <script>
        console.error("Error in text_markdown.njk");
    </script>
    {% include 'dump.njk' %}
{% endif %}
{% set headline = slide.data.headline %}
{% set btnText = slide.data.btnText %}
{% set img_res = slide.data.img_res %}
{% set btnUrl = slide.data.btnUrl %}
{% set specs = slide.data.specs %}
{% set price = slide.data.price %}
{% set btnType = "primary" %}
{% set text_markdown = "../" + slide.data.page.filePathStem + ".md" %}
<div class="comp-product-slide">
    <img alt="{{ headline }}" src="{{ img_res }}"/>
    <div class="product-content">
        <h1>{{ headline }}</h1>
        <div class="product-specs">
            {% for text_italic in specs %}
                {% include 'text_italic.njk' %}
            {% endfor %}
        </div>
        {% include "flex_text.njk" %}
        <h2 class="product-price">{{ price }}</h2>
    </div>
</div>